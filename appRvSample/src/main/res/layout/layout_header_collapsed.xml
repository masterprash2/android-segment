<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_header"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:paddingBottom="@dimen/margin_standard"
    android:paddingTop="@dimen/margin_small"
    app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
    tools:layout_editor_absoluteY="137dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_refer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_circle"
        android:foregroundGravity="center"
        android:padding="@dimen/margin_small"
        app:layout_constraintStart_toStartOf="@+id/iv_document"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_games"
        app:tint="@color/dark_grey" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_holiday2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_circle"
        android:foregroundGravity="center"
        android:padding="@dimen/margin_small"
        app:layout_constraintStart_toStartOf="@+id/iv_refer2"
        app:layout_constraintTop_toTopOf="@+id/iv_refer2"
        app:srcCompat="@drawable/ic_location"
        app:tint="@color/dark_grey" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_money2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_circle"
        android:foregroundGravity="center"
        android:padding="@dimen/margin_small"
        app:layout_constraintStart_toStartOf="@+id/iv_refer2"
        app:layout_constraintTop_toTopOf="@+id/iv_refer2"
        app:srcCompat="@drawable/ic_music_note"
        app:tint="@color/dark_grey" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_document2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_circle"
        android:foregroundGravity="center"
        android:padding="@dimen/margin_small"
        app:layout_constraintStart_toStartOf="@+id/iv_refer2"
        app:layout_constraintTop_toTopOf="@+id/iv_refer2"
        app:srcCompat="@drawable/ic_videocam"
        app:tint="@color/dark_grey" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_android2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_circle"
        android:foregroundGravity="center"
        android:padding="@dimen/margin_small"
        app:layout_constraintStart_toStartOf="@+id/iv_refer2"
        app:layout_constraintTop_toTopOf="@+id/iv_refer2"
        app:srcCompat="@drawable/ic_insert_emoticon"
        app:tint="@color/dark_grey" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_circle"
        android:foregroundGravity="center"
        android:padding="@dimen/margin_small"
        app:layout_constraintStart_toStartOf="@+id/iv_refer2"
        app:layout_constraintTop_toTopOf="@+id/iv_refer2"
        app:srcCompat="@drawable/ic_attach_money"
        app:tint="@color/dark_grey" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_holiday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_circle"
        android:foregroundGravity="center"
        android:padding="@dimen/margin_small"
        app:layout_constraintStart_toStartOf="@+id/iv_refer2"
        app:layout_constraintTop_toTopOf="@+id/iv_refer2"
        app:srcCompat="@drawable/ic_beach"
        app:tint="@color/dark_grey" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_refer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_circle"
        android:foregroundGravity="center"
        android:padding="@dimen/margin_small"
        app:layout_constraintStart_toStartOf="@+id/iv_refer2"
        app:layout_constraintTop_toTopOf="@+id/iv_refer2"
        app:srcCompat="@drawable/ic_card_giftcard"
        app:tint="@color/dark_grey" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_android"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/bg_circle"
        android:foregroundGravity="center"
        android:padding="@dimen/margin_small"
        app:layout_constraintBottom_toBottomOf="@+id/iv_refer2"
        app:layout_constraintStart_toStartOf="@+id/iv_refer2"
        app:layout_constraintTop_toTopOf="@+id/iv_refer2"
        app:srcCompat="@drawable/ic_android"
        app:tint="@color/dark_grey" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_document"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:background="@drawable/bg_circle"
        android:foregroundGravity="center"
        android:padding="@dimen/margin_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_refer2"
        app:srcCompat="@drawable/ic_insert_drive_file"
        app:tint="@color/dark_grey" />

</android.support.constraint.ConstraintLayout>